<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_purchase"
        android:background="@drawable/ic_rectangle_bakcground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PurchaseActivity">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shapka"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/mainActiveStatus"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/sampleText"
                android:textColor="@color/textColour"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/buttonPreviousPeriod"
                app:layout_constraintEnd_toStartOf="@+id/buttonNextPeriod"
                app:layout_constraintStart_toEndOf="@+id/buttonPreviousPeriod" />

            <TextView
                android:id="@+id/mainPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="@string/sampleText"
                android:textColor="@color/textColour"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/buttonNextPeriod"
                app:layout_constraintStart_toEndOf="@+id/buttonPreviousPeriod"
                app:layout_constraintTop_toTopOf="@+id/buttonPreviousPeriod" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonPreviousPeriod"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/ic_arrow_left"
                android:foregroundGravity="center"
                android:onClick="previousPeriod"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/buttonNextPeriod"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_arrow_right"
                android:onClick="nextPeriod"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_info"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapka">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_rectangle_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main__plan_layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/activity_main__plan_layout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout41"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__plan_balance"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__plan_balance"
                    app:layout_constraintVertical_bias="0.40" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout51"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__plan_balance"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout41"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__plan_balance"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/activity_main__plan_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintStart_toStartOf="@+id/guideline4"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/activity_main__plan_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintStart_toStartOf="@+id/activity_main__plan_budget"
                    app:layout_constraintTop_toBottomOf="@+id/activity_main__plan_budget" />

                <TextView
                    android:id="@+id/activity_main__plan_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintStart_toStartOf="@+id/activity_main__plan_spent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout510" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout410"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__plan_spent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline4"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__plan_budget" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout510"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_main__plan_spent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="14dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main__plan_layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView82"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/budget"
                    android:textColor="@color/textColour"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView92"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/spent"
                    android:textColor="@color/textColour"
                    app:layout_constraintEnd_toEndOf="@+id/textView82"
                    app:layout_constraintStart_toStartOf="@+id/textView82"
                    app:layout_constraintTop_toBottomOf="@+id/textView82" />

                <TextView
                    android:id="@+id/textView102"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/balance"
                    android:textColor="@color/textColour"
                    app:layout_constraintEnd_toEndOf="@+id/textView92"
                    app:layout_constraintStart_toStartOf="@+id/textView92"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout52" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout52"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView92" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_main__plan_layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/activity_main__plan_layout2"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout43"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__fact_balance"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__fact_balance"
                    app:layout_constraintVertical_bias="0.40" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout53"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__fact_balance"
                    app:layout_constraintStart_toStartOf="@+id/constraintLayout43"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__fact_balance"
                    app:layout_constraintVertical_bias="0.6" />

                <TextView
                    android:id="@+id/activity_main__fact_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintStart_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/activity_main__fact_spent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintEnd_toEndOf="@+id/activity_main__fact_budget"
                    app:layout_constraintStart_toStartOf="@+id/activity_main__fact_budget"
                    app:layout_constraintTop_toBottomOf="@+id/activity_main__fact_budget" />

                <TextView
                    android:id="@+id/activity_main__fact_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/sampleNumber"
                    android:textColor="@color/textColour"
                    app:layout_constraintEnd_toEndOf="@+id/activity_main__fact_spent"
                    app:layout_constraintStart_toStartOf="@+id/activity_main__fact_spent"
                    app:layout_constraintTop_toBottomOf="@+id/sdferwfe" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout430"
                    android:layout_width="8dp"
                    android:layout_height="2dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintBottom_toBottomOf="@+id/activity_main__fact_spent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline5"
                    app:layout_constraintTop_toTopOf="@+id/activity_main__fact_budget" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sdferwfe"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_slim_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/activity_main__fact_spent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="14dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan"
                app:layout_constraintBottom_toBottomOf="@+id/line"
                app:layout_constraintEnd_toEndOf="@+id/activity_main__plan_layout1"
                app:layout_constraintStart_toStartOf="@+id/activity_main__plan_layout1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fact"
                app:layout_constraintEnd_toEndOf="@+id/activity_main__plan_layout3"
                app:layout_constraintStart_toStartOf="@+id/activity_main__plan_layout3"
                app:layout_constraintTop_toTopOf="@+id/activity_main__plan_layout3" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/podval_fon"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_rectangle_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/delete_button"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:onClick="addPurchase"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cancel_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/save_button"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add"
                    android:textColor="@color/textColour"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/save_button"
                android:layout_width="101dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:onClick="menuButton"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/delete_button"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu"
                    android:textColor="@color/textColour"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cancel_button"
                android:layout_width="102dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_button"
                android:onClick="gotoProfits"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/delete_button"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profits"
                    android:textColor="@color/textColour"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_rectangle_6"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main_info">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainStatus1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_status_plan"
                android:onClick="setStatus1"
                app:layout_constraintBottom_toBottomOf="@+id/mainStatus2"
                app:layout_constraintEnd_toStartOf="@+id/mainStatus2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mainStatus2">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planned"
                    android:textColor="@color/textColour"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainStatus2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_status_accrued"
                android:onClick="setStatus2"
                app:layout_constraintBottom_toBottomOf="@+id/mainStatus3"
                app:layout_constraintEnd_toStartOf="@+id/mainStatus3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/mainStatus1"
                app:layout_constraintTop_toTopOf="@+id/mainStatus3">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/postponed"
                    android:textColor="@color/textColour"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainStatus3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_status_baught"
                android:onClick="setStatus3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/mainStatus2"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bought"
                    android:textColor="@color/textColour"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainPurchasesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/podval_fon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:elevation="1dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_nav" />
</androidx.drawerlayout.widget.DrawerLayout>